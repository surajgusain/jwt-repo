{% extends 'base.html.twig' %}

{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                {{ form_start(form) }}
                {{ form_row(form.username) }}
                {{ form_row(form.password) }}

                <button type="submit" class="btn btn-info">Enter</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}

